<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/style.css" media="screen">
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,400italic,500,700' rel='stylesheet' type='text/css'>
    <title>{{courseId}}</title>
</head>
<body>
    <section id="listView">
        <ul>
            <li v-for="(index, item) in items" v-on:click="highlightMessageClick(item)" :class="[item.highlight]" id="listViewLi{{index}}"  v-cloak>
                <span>{{item}}</span>
                {{#if admin}}
                    <button v-on:click="removeMessageClick(item)">X</button>
                {{/if}}
            </li>
        </ul>
    </section>
    {{#if admin}}
    <section id="oldItems">
        <ul>
            <li v-for="item in items">
                <span>{{item}}</span>
            </li>
        </ul>
    </section>
    {{/if}}
    <div id="courseId" data-course-Id="{{courseId}}"></div>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/vue/1.0.17/vue.min.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
    <script src="/scripts/listView.js"></script>
    <script src="/scripts/oldMessages.js"></script>
    <script src="/scripts/main.js"></script>
</body>
</html>
